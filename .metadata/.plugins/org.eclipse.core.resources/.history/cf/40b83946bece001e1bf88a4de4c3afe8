package project_5;

import java.util.ArrayList;

public class ReviewFunction {
	//리뷰 보여주기 함수
	public boolean showReview(ArrayList<Review> reviews, Product list,int num,boolean show) {
		boolean result=true;
		for(int i=0;i<reviews.size();i++) {
			if(list.getName().equals(reviews.get(i).getName())) {
				ArrayList<String> r = reviews.get(i).getReview();
				for (String review : r) {
					if(show) {
						System.out.println(review);
					}else {
						System.out.println(review.substring(2));	
					}
				}
				result=false;
			}
		}
		if(result) {
			System.out.println("등록된 리뷰가 없습니다.");
		}
		return false;
	}
}