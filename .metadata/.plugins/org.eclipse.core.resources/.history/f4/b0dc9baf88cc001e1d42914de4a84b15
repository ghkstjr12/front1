package project_5;

import java.util.ArrayList;



public class Review {
    private static int nextId = 1;
    private int id;
    private String name;
    private ArrayList<String> contentList; // 리뷰 내용을 ArrayList로 변경

    public Review(String name, ArrayList<String> contentList) {
        this.id = nextId++;
        this.name = name;
        this.contentList = contentList;
    }

    // 다음으로 할당될 고유번호를 가져오는 메서드
    public static int getNextId() {
        return nextId;
    }

    // 리뷰의 고유번호를 가져오는 메서드
    public int getId() {
        return id;
    }

    // 리뷰를 작성한 사용자 이름을 가져오는 메서드
    public String getName() {
        return name;
    }

    // 리뷰 내용을 가져오는 메서드
    public ArrayList<String> getContentList() {
        return contentList;
    }

    // 다음으로 할당될 고유번호를 설정하는 메서드 (테스트 용도)
    public static void setNextId(int nextId) {
        Review.nextId = nextId;
    }

    // 리뷰 정보를 문자열로 반환하는 메서드 (테스트 용도)
    @Override
    public String toString() {
        return "Review [id=" + id + ", name=" + name + ", contentList=" + contentList + "]";
    }
}
