package project_5;

import java.util.ArrayList;

public class Review {
	private String name;
	private ArrayList<String> reviews = new ArrayList<>();
	private static int nextId = 1; // 다음으로 할당될 고유번호를 저장하는 변수
	private int id; // 리뷰의 고유번호
	
	public Review(String name) {
		this.name = name;
		this.id = nextId++; 
	}
	
	 // 다음으로 할당될 고유번호를 가져오는 메서드
    public static int getNextId() {
        return nextId;
    }

    // 리뷰의 고유번호를 가져오는 메서드
    public int getId() {
        return id;
    }

	public ArrayList<String> getReview(){
		return reviews;
	}
	public void setReview(String review) {
		reviews.add(review);
	}
	@Override
	public String toString() {
		return "Review [name=" + name + ", reviews=" + reviews + "]";
	}
	public String getName() {
		return name;
	}

	
	
}